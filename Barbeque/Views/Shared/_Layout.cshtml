@using System.Web.Optimization

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <meta name="description" content="" />
    <meta name="application-name" content="">

    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:600' rel='stylesheet' type='text/css'>    @Styles.Render("~/styles")
    @Scripts.Render("~/scripts/modernizrlib")
</head>

<body>
    @*Begin Google Analytics tracking code.*@
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-46136239-4', 'auto');
        ga('send', 'pageview');

    </script>    
    @*End Google Analytics tracking code.*@

    @RenderBody()

    <footer>
        <div class="row footer">
            <div class="small-12 medium-5 large-4 columns">
                <p>
                    Christ Episcopal Church has served the
                    Blacksburg community for over 150 years.
                    We worship every Sunday at 8:30 a.m. and
                    10:30 a.m. with the celebrations of Holy
                    Eucharist. Everyone is welcome.
                </p>
            </div>

            <div class="small-12 medium-5 large-4 columns">
                <ul class="fa-ul">
                    <li>
                        <i class="fa-li fa fa-home fa-2x"></i>
                        <span>
                            Visit the Christ Episcopal Church 
                            <a href="http://www.christchurchblacksburg.org/">
                                website
                            </a>
                            to learn more about our parish
                        </span>
                    </li>
                    <li>
                        <i class="fa-li fa fa-facebook-official fa-2x"></i>
                        <span>
                            Like Christ Episcopal Church on 
                            <a href="https://www.facebook.com/ChristEpiscopalChurchBlacksburgVa">
                                Facebook
                            </a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row copyright">
            <div class="small-12 medium-6 large-6 columns">
                &copy; @DateTime.Now.Year Christ Episcopal Church, All Rights Reserved.<br>
            </div>
            <div class="medium-6 large-6 columns hide-for-small text-right">
                Developed by <a href="http://shermandigital.com/">Chris Sherman</a>
            </div>
            <div class="small-12 columns show-for-small">
                <br>
                Developed by <a href="http://shermandigital.com/">Chris Sherman</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/scripts/vendor")
    @RenderSection("scripts", required: false)
</body>

</html>